
.comment-list {
  position: relative;
  padding: 26rpx 40rpx;
  background: #fff;
  border-bottom: solid 1rpx #f5f5f5;
  box-sizing: border-box;
  transition: left 0.2s ease-in-out;
}
.comment-title {
  float: left;
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  overflow: hidden;
}
.comment-title image {
  max-width: 100%;
  max-height: 100%;
}
.comment-header {
  float: left;
  margin-left: 12rpx;
  font-size: 28rpx;
  color: #999;
}
.comment-header-reply {
  display: block;
  width: 571rpx;
  font-size: 34rpx;
  font-weight: 700;
}
.comment-header-time {
  display: block;
  margin-top: 12rpx;
}
.comment-del {
  display: inline-block;
  position: absolute;
  right: 40rpx;
  top: 30rpx;
  padding: 8rpx 18rpx;
  border: solid 1rpx #f5f5f5;
  font-size: 28rpx;
  border-radius: 8rpx;
  color: #f5f5f5;
}
.comment-content {
  clear: both;
  display: block;
  margin-top: 18rpx;
  font-size: 30rpx;
}



