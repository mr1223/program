@import '/lib/style/css/iconfont/iconfont.wxss';
.detail {
  padding-bottom: 80rpx;
  width: 100%;
}

.detail-title {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 11;
  padding: 26rpx 40rpx; 
  width: 100%;
  height: auto;
  background: #fff;
  border-bottom: 1rpx solid #f5f5f5;
}
.detail-avatarurl {
  float: left;
  margin-right: 32rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  overflow: hidden;
}
.detail-avatarurl image {
  max-width: 100%;
  max-height: 100%;
}
.detail-user {
  float: left;
  width: 560rpx;
}
.detail-textContent {
  font-size: 32rpx;
  font-family:PingFangSC-Regular;
  color:#999999;
}
.detail-text {
  display: block;
  font-size: 36rpx;
  font-family:PingFangSC-Regular;
  color:#999999;
}
.detail-contact text {
  display: inline-block;
  position: absolute;
  right: 120rpx;
  top: 20rpx;
  padding: 8rpx 18rpx;
  border: solid 1rpx #f00;
  font-size: 28rpx;
  border-radius: 8rpx;
  font-weight: 500;
  color: #f00;
}

.detailCon {
  display: block;
  clear: both;
  padding: 0 40rpx 26rpx 40rpx; 
  padding-top: 160rpx;
  font-size: 32rpx;
  font-family:PingFangSC-Regular;
  color:#999999;
  background: #fff;
}
.detail-abstract {
  display: block;
  margin-bottom: 18rpx;
  color:#333;
}
.detail-content {
  display: block;
}
.detailImageList {
  width: 100%;
}
.detailImageList image {
  display: block;
  margin-top: 9rpx;
  width: 100%;
  max-height: 100%;
}
.detail-localtion {
  display: block;
  margin-top: 20rpx;
}
.icon-map {
  color: #f00;
}
.detail-username {
  font-size: 42rpx;
}
.detail-name {
  font-weight: 900;
  color: #666;
}
.icon-lianjie_icon {
  float: left; 
  margin-right: 8rpx;
  color: #ff6385;
  font-size: 64rpx;
}
.detail-artcle {
  float: left; 
  line-height: 2.1;
  font-size: 34rpx;
}
.detail-link {
  display: block;
  margin-top: 12rpx;
  padding: 40rpx 40rpx 20rpx 40rpx;
  background: #fff;
}
.detail-comment {
  margin-top: 12rpx;
  padding: 20rpx 40rpx;
  background: #fff;
  font-size: 34rpx;
}
.comment {
  padding: 20rpx 40rpx 0 40rpx;
  background: #fff;
}
.comment-list {
  padding-top: 12rpx;
  padding-bottom: 12rpx;
  border-bottom: solid 1rpx #f5f5f5;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #999999;
}
.comment-title {
  float: left;
  position: relative;
  width: 432rpx;
  padding-right: 120rpx;
}
.comment-name {
  display: block;
  margin-top: 8rpx;
}
.comment-time {
  display: inline-block;
  margin-top: 12rpx;
  font-size: 28rpx;
}
.comment-content {
  clear: both;
  display: block;
  padding-top: 12rpx;
}
.comment-reply {
  display: inline-block;
  position: absolute;
  right: 12rpx;
  top: 20rpx;
  z-index: 2;
  padding: 8rpx 18rpx;
  border: solid 1rpx #f00;
  font-size: 28rpx;
  border-radius: 8rpx;
  font-weight: 500;
  color: #f00;
}
.detail-reply {
  padding: 20rpx 40rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
  font-size: 32rpx;
  border-top: solid 1prx #f5f5f5;
}
.detail-reply-input {
  float: left;
  padding: 10rpx 24rpx;
  margin-right: 24rpx;
  width: 489rpx;
  background: #f5f5f5;
  border-radius: 5rpx;
}
.detail-reply-btn {
  float: left;
  padding: 10rpx 28rpx;
  background: #f5f5f5;
  font-size: 32rpx;
  color:#999999;
  border-radius: 5rpx;
}
.comment-parent {
  margin-top: 6rpx;
  padding: 12rpx;
  border: solid 1rpx #f5f5f5;
  background: #f5f5f5;
  border-radius: 8rpx;
}
.comment-parent-name {
  display: block;
}
.comment-parent-content {
  display: block;
}
.detail-praise {
  margin:24rpx auto 10rpx auto;
  width:140rpx;
  height:140rpx;
  border-radius:70rpx;
  background:#ff6384;
  color:#f5f5f5;
  text-align:center;
  line-height:140rpx;
}
.icon-article {
  font-size: 64rpx;
}
.comments {
  position: relative;
}
.icon-comment-content {
 float: right;
 margin-right: 20rpx;
 margin-top: 10rpx;
 font-size: 28rpx;
}
.icon-comment {
  font-size: 32rpx;
  margin-right: 8rpx;
}
.praise-active {
  color: #e5f18b;
}
