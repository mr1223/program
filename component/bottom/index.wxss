.bottom-content {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9;
  width: 100%;
  height: 120rpx;
  font-size: 32rpx;
  background: #f5f5f5;
  
}
.bottom-nav {
  position: relative;
  float: left;
  padding-top: 12rpx;
  width: 33.3%;
  text-align: center; 
  font-size: 30rpx;
  color:#666;
  font-family:PingFangSC-Regular;
}
.content-image {
  position: relative;
}
.iconNav {
  display: block;
  font-size: 52rpx;
  font-weight: 900;
}
.icon-wode {
   font-size: 32rpx;
}
.bottom-nav-active {
  color: #ff6384;
}
