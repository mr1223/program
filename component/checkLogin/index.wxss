@import '/lib/style/css/iconfont/iconfont.wxss';
.checklogin {
  display: none;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: 100%;
}
.checkStatus {
  display: block;
}
.checklogin-content {
  position: absolute;
  top: 20%;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 103;
  margin: 0 auto;
  width: 70%;
  height: 637rpx;
  background: #fff;
  border-radius: 35rpx;
  overflow: hidden;
}
.icon-guanbi {
  position:absolute;
  top:7rpx;
  right:8rpx;
  z-index: 104;
  color:#e5e5e5;
  font-size:56rpx;
}
.checklogin-mask {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 102;
  background: #000;
  opacity: 0.7;
  width: 100%;
  height: 100%;
}
.checklogin-image {
  width: 60%;
  margin: 0 auto;
  padding-top:25rpx;
}
.checklogin-image image {
  width: 100%;
}
.checklogin-title {
  display: block;
  width: 336rpx;
  height: auto;
  margin: 0 auto;
  margin-bottom: 20rpx;
  padding: 24rpx 40rpx;
  font-size: 34rpx;
  color:#ff6384;
  text-align: center;
}
.checklogin-btn {
  width: 100%;
}
.checklogin-btn button {
  display: block;
  width: 140rpx;
  height: 110rpx;
  border: none;
  border-color: 0;
  line-height: 110rpx;
  text-align: center;
  color: #fff;
  background: #ddd;
  font-size: 38rpx;
  border-radius: 4rpx;
}
.checklogin-btn button::after {
  border: none;
}
.checklogin-btn .checklogin-cancel {

}
.checklogin-btn .checklogin-sure {
  width: 100%;
  background: #ff6384;
  color: #fff;
}











